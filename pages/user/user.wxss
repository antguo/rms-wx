page{
  background-color: #f4fafa;
  border-top: solid 1rpx #d5d5d5;
}
.container_items{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  padding: 22rpx 20rpx;
}
/* 重复样式start */
.user_header,.user_msg,.user_msg_detail,.user_items,.user_item,.user_item_arrow,.user_item_tel,.user_h_arrow,.user_item_name,.user_item_n_icon{
  display: flex;
}
.user_msg_pic image,.user_h_arrow image,.user_item_arrow image,.user_item_img,.user_item_n_icon image{
  width: 100%;
  height: 100%;
}
/* 重复样式end */
/* 我的头部start */
.user_header{
  width: 100%;
  height: 168rpx;
  border-radius: 8rpx;
  background-color: #3889f0;
  flex-wrap: nowrap;
  align-items: center;
  justify-content: space-between;
  padding: 0 28rpx 0 32rpx;
  position: relative;
}
.user_header .red{
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  height: 15rpx;
  width: 15rpx;
  background: red;
  border-radius: 50%;
}
.user_header .login-tips {
  color: #fff;
  margin-left: 30rpx; 
  flex-direction: column;
  justify-content: center;
}
.user_msg {
  justify-content: space-between;
  align-items: center;
}
.user_msg_pic{
  padding-right: 36rpx;
}
.user_msg_pic image{
  width: 110rpx;
  height: 110rpx;
  border-radius: 110rpx;
}
.user_msg_detail{
  flex-direction: column;
  flex-wrap: nowrap;
  color: #ffffff;
}
.user_msg_name{
  font-size: 34rpx;
  font-weight: bold;
  /* padding-bottom: 20rpx; */
}
.user_msg_tel{
  font-size: 20rpx;
}
.user_h_arrow,.user_item_arrow{
  width: 30rpx;
  height: 30rpx;
  align-items: center;
}
/* 我的头部end */
/* 我的目录start */
.user_items{
  width: 100%;
  flex-wrap: wrap;
  margin-top: 30rpx;
  background-color: #ffffff;
  border-radius: 8rpx;
  padding: 0 20rpx;
}
.user_item{
  width: 100%;
  height: 120rpx;
  justify-content: space-between;
  align-items: center;
  border-bottom: solid 1rpx #f5f5f5;
  padding: 0 8rpx 0 12rpx;
  position: relative;
}
.user_item .red{
  position: absolute;
  top: 20rpx;
  right: 0;
  height: 15rpx;
  width: 15rpx;
  background: red;
  border-radius: 50%;
}
.user_item_name{
  align-content: center;
  flex-direction: row;
}
.user_item_name text{
  padding-left: 20rpx;
  color: #323232;
  font-size: 32rpx;
}
.user_item_n_icon{
  width: 40rpx;
  height: 40rpx;
  align-items: center;
}
.user_item_arrow{
  align-items: center;
}
.user_item_tel{
  font-size: 30rpx;
  align-items: center;
  color: #666666;
}
.user_item_tel view{
  padding-right: 16rpx;
}
/* 我的目录end */

.msg{
	font-size: 24rpx;
	color: white;
	text-align: center;
	width: 100%;
	margin-top: 10rpx;
}