@import '../../../utils/wxParse/wxParse.wxss';
page{
  background-color: #f2f8f8;
  border-top: solid 1rpx #d5d5d5;
}
.constainer_item{
  padding: 22rpx 22rpx;
}
.about_item,.about_item_title{
  display: flex;
}
.about_item{
  width: 100%;
  flex-direction: column;
  font-size: 30rpx;
  color: #666666;
  background-color: #ffffff;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}
.about_item_title{
  width: 100%;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: center;
  height: 80rpx;
  border-bottom: solid 1rpx #ececec;
}
.about_item_title text{
  padding-left: 16rpx;
  font-weight: bold;
  color: #3889f0;
}
.about_title_icon{
  width: 8rpx;
  height: 32rpx;
  background-color: #3889f0;
  border-radius: 8rpx;
  margin-left: 28rpx;
}
.about_item_contact {
  padding: 40rpx 34rpx 48rpx 34rpx;
  background: white;  
  word-break: break-all;
  height: auto;
  overflow: hidden;
}
.about_item_contact image {
  width: 100% !important;
}