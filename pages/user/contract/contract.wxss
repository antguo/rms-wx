page{
  border-top: solid 1rpx #d5d5d5;
}
.container{
  border-top: solid 3rpx #f2f8f8;
}
.container_items{
  width: 100%;
  height: 200rpx;
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
  /* justify-content: space-between; */
  padding: 34rpx 28rpx;
}
/* 公共样式start */
.contract_items,.contract_msg,.contract_arrow{
  display: flex;
}
.contract_icon image{
  width: 100%;
  height: 100%;
}
/* 公共样式end */

.contract_items{
  align-items: center;
  justify-content: space-between;
  flex-wrap: nowrap;
  padding: 32rpx 28rpx;
  border-top: solid 3rpx #3889f0;
  background-color: #f1f7ff;
  margin-bottom: 28rpx;
  border-radius: 0 0 8px 8px;
}
.contract_msg{
  flex-wrap: wrap;
  width: 70%;
  font-size: 20rpx;
}
.contract_arrow{
  align-items: center;
  height: 28rpx;
  width: 28rpx;
  float: right;
}
.contract_arrow image{
  width: 100%;
  height: 100%;
  border-radius: 40rpx;
}
.contract_msg_addr{
  font-size: 30rpx;
  color: #333333;
  padding-bottom: 48rpx;
}
.contract_msg_time{
  color: #666666;
}
.contract_icon{
  width: 68rpx;
  height: 78rpx;
  position: relative;
  bottom: 0;
  left: 0;
  top: 54rpx;
}
.contract_img{
  width: 104rpx;
  height: 132rpx;
}