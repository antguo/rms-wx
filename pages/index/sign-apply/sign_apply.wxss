.apply_header {
  height: 200rpx;
  width: 100%;
}

/* 公共样式start */

apply_title_icon
.apply_items, .apply_item, .apply_item_title,
.apply_item_contents, .apply_item_content, .apply_bs_item_right,
.apply_bs_item_r_choice, .room_type_item, .room_type_items,
.apply_lessor_content, .apply_lessor_item, .apply_lessor_add,
.apply_lessor_title, .lessor_item_msg, .lessor_item_del, .room_type_i_select {
  display: flex;
}

.apply_header image, .room_num_img image, .lessor_add image, .lessor_del image {
  width: 100%;
  height: 100%;
}

/* 公共样式end */

/* 网签申请目录start */

.apply_items {
  width: 100%;
  flex-direction: column;
  flex-wrap: wrap;
  padding: 0 20rpx 0 20rpx;
  font-size: 30rpx;
  color: #666;
  margin-top: 28rpx;
}

.apply_item {
  width: 100%;
  flex-direction: column;
  flex-wrap: wrap;
  background-color: #fff;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

.apply_item_title {
  width: 100%;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: center;
  height: 80rpx;
  border-bottom: solid 1rpx #ececec;
}

.apply_item_title text {
  padding-left: 16rpx;
}
.apply_item_title text .hint{
	font-size: 24rpx;
	margin-left: 0;
  color: red;
}
.apply_title_icon {
  width: 8rpx;
  height: 28rpx;
  background-color: #3889f0;
  border-radius: 8rpx;
  margin-left: 28rpx;
}

.apply_item_contents {
  flex-direction: column;
  flex-wrap: wrap;
  padding: 0 26rpx;
}

.apply_item_content {
  align-items: center;
  justify-content: space-between;
  flex-wrap: nowrap;
  height: 98rpx;
  border-bottom: solid 1rpx #ececec;
}

/* 填写基本信息start */

.apply_bs_item_right {
  font-size: 26rpx;
  align-items: center;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: flex-end;
  text-align: right;
}

.apply_bs_item_r_choice {
  align-items: center;
  justify-content: center;
  height: 48rpx;
  width: auto;
  background-color: #f7f7f7;
  border: solid 1rpx #d8d8d8;
  border-radius: 8rpx;
  /* margin-left: 16rpx; */
  color: #333;
  padding: 0 20rpx;
}

.apply_bs_item_r_choice:nth-of-type(2) {
  margin-left: 25rpx;
}

.checked {
  background-color: #3889f0;
  border: none;
  color: #fff;
  margin: 0 auto;
}

.apply_bs_item_r_addr {
  text-align: right;
}

.apply_bs_item_addr, .apply_item_contract {
  width: 40%;
}

.room_num {
  padding-right: 10rpx;
}

.room_num_img, .room_type_i_select image {
  width: 30rpx;
  height: 30rpx;
}

.room_type_item {
  align-items: center;
  flex-wrap: nowrap;
  justify-content: flex-end;
}

.room_type_items {
  align-items: center;
  justify-content: flex-end;
  flex-wrap: nowrap;
  height: 98rpx;
  border-bottom: solid 1rpx #ececec;
}

.room_type_i_select {
  justify-content: space-between;
  align-items: center;
  margin: 0 10rpx;
}

.room_type_i_select_t {
  width: 100rpx;
  text-align: center;
}

