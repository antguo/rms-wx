/* 填写基本信息end */

/* 出租人信息start */

.apply_item_content {
  align-items: center;
  justify-content: space-between;
  flex-wrap: nowrap;
  height: 98rpx;
  border-bottom: solid 1rpx #ececec;
}

.apply_lessor_content {
  /* align-items: center; */
  flex-wrap: nowrap;
  flex-direction: row;
  height: 190rpx;
  border-bottom: solid 1rpx #ececec;
  justify-content: space-between;
  padding: 15rpx 0;
  box-sizing: border-box;
}
.apply_lessor_content text{
  width: 100rpx;
}
.apply_lessor_item {
  padding-right: 26rpx;
}

.lessor_name_input, .lessor_name_tel {
  border: solid 1rpx #d8d8d8;
  width: 144rpx;
  height: 70rpx;
  border-radius: 8rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
}

.lessor_name_tel {
  width: 212rpx;
}

.apply_lessor_add {
  align-items: center;
  flex-wrap: nowrap;
  padding-right: 30rpx;
  color: #3889f0;
}

.lessor_add {
  width: 28rpx;
  height: 28rpx;
}

.apply_lessor {
  justify-content: space-between;
}

.apply_lessor_title {
  align-items: center;
}

.lessor_del {
  width: 28rpx;
  height: 28rpx;
}

.lessor_item_msg {
  align-items: center;
}

.contract_text {
  padding-left: 36rpx;
}

/* 出租人信息end */

/* 租赁信息start */

.contract_input {
  width: 100rpx;
  height: 70rpx;
  border: solid 1rpx #d8d8d8;
  border-radius: 8rpx;
  margin: 0 26rpx;
  text-align: center;
}

/* 租赁信息end */

