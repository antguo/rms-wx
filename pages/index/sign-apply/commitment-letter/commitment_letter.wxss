page{
  background-color: #faf9f7;
  border-top: solid 1rpx #d5d5d5;
}
.constainer_item{
  padding: 20rpx 20rpx 0 20rpx;
}
/* 公共样式start */
.letter_item_title,.letter_see,.letter_item,.letter_see_icon,.letter_item_demo,.letter_demo_img,.letter_step{
  display: flex;
}
.letter_see_icon image{
  width: 100%;
  height: 100%;
}
.letter_demo_img image,.letter_img_icon image{
  width: 100%;
  height: 100%;
}
/* 公共样式end */
/* 上传承诺书卡片start */
.letter_item{
  width: 100%;
  flex-wrap: nowrap;
  background-color: #ffffff;
  border-radius: 8rpx;
  border-bottom: solid 1rpx #ececec;
  font-size: 30rpx;
  color: #666666;
  text-align: center;
}
.letter_item_title{
  /* width: 100%; */
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: center;
  height: 80rpx;
}
.letter_item_title text{
  padding-left: 16rpx;
  font-weight: bold;
  color: #333333;
}
.letter_title_icon{
  width: 8rpx;
  height: 28rpx;
  background-color: #3889f0;
  border-radius: 8rpx;
  margin-left: 28rpx;
}
.letter_see{
  align-items: center;
  flex-wrap: nowrap;
  padding-right: 30rpx;
  color: #3889f0;
}
.letter_see_icon{
  width: 28rpx;
  height: 28rpx;
  align-items: center;
  padding-right: 12rpx;
}
.letter_item_demo{
  flex-direction: column;
  flex-wrap: wrap;
  justify-content: flex-start;
}
.letter_demo_img{
  width: 312rpx;
  height: 314rpx;
  margin-top: 20rpx;
  background-color: #faf9f7;
  align-items: center;
  justify-content: center;
}
.letter_demo_img image{
  border-radius: 8rpx;
}
.letter_img_icon{
  height: 74rpx;
  width: 74rpx;
}
/* 上传承诺书卡片end */
/* 按钮start */
.letter_step{
  width: 100%;
  flex-wrap: nowrap;
  justify-content: space-between;
  padding-top: 40rpx;
}
.letter_step_next{
  width: 100%;
  height: 90rpx;
  font-size: 32rpx;
}
.letter_step_next{
  background-color: #3889f0;
  color: #ffffff;
}

.example,.imgGroup{
  width: 100%;
}
.imgGroup{
  margin-top: 20rpx;
}
.imgGroup .imgWrap{
  width: 31%;
  height: 210rpx;
  margin-right: 3.5%;
  margin-top: 20rpx;
  position: relative;
}
.imgGroup .del{
  position: absolute;
  right: 0;
  top: 0;
  background: red;
  height: 55rpx;
  width: 55rpx;
  font-size: 30rpx;
  color: white;
}
.imgGroup image{
  width: 100%;
  height: 100%;
}
.imgGroup .imgWrap:nth-of-type(3n){
  margin-right: 0;
}
.generate{
  width: 100%;
  height: 90rpx;
  font-size: 32rpx;
  color: #3889f0;
  background: white;
  margin-bottom: 30rpx;
  box-sizing: border-box;
  border: 1rpx solid #3889f0;
  border-radius: 5px;
}
.generate view{
  height: 90rpx;
  width: 100%;
}