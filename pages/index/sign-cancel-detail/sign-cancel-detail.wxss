.main{background-color: #faf9f7;min-height: 100vh;overflow: hidden;font-size: 30rpx;color: #666666;}
.infoWrap{margin: 28rpx 20rpx 0 20rpx;background: white;width: auto;overflow: hidden;}
.tit{height: 80rpx;padding: 0 28rpx;border-bottom: solid 1rpx #ececec;font-size: 30rpx;color: #666666;font-weight: bold;display: flex;}
.tit .border{width: 8rpx;height: 30rpx;background-color: #3889f0;border-radius: 8rpx;margin-right: 16rpx;}
.promiseWrap{padding: 19px 13px 21px 13px;width: 100%;box-sizing: border-box;}
.promiseWrap>view>image{width: 312rpx;height: 314rpx;margin-top: 20rpx;background-color: #faf9f7;border-radius: 8rpx;}

.apply_item_content {
  margin: 0 20rpx;
  align-items: center;
  justify-content: space-between;
  flex-wrap: nowrap;
  height: 98rpx;
  border-bottom: solid 1rpx #ececec;
}
.apply_bs_item_addr,.apply_item_contract {width: 40%;}
.apply_bs_item_right{
  font-size: 26rpx;
  align-items: center;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: flex-end;
  text-align: right;
  display: flex;
}
.room_num_img, .room_type_i_select image {
  width: 30rpx;
  height: 30rpx;
}
.room_type_i_select {
  justify-content: space-between;
  align-items: center;
  margin: 0 10rpx;
}
.apply_next{
  margin:38rpx 20rpx;
  box-sizing: border-box;
  background-color: #faf9f7;
}
.apply_next button{
  background-color: #3889f0;
  color: #fff;
  width: 100%;
  height: 90rpx;
  font-size: 32rpx;
}

.imgGroup{
  margin-top: 20rpx;
}
.imgGroup .imgWrap{
  width: 31%;
  height: 210rpx;
  margin-right: 3.5%;
  margin-top: 20rpx;
  position: relative;
}
.imgGroup .del{
  position: absolute;
  right: 0;
  top: 0;
  background: red;
  height: 55rpx;
  width: 55rpx;
  font-size: 30rpx;
  color: white;
}
.imgGroup image{
  width: 100%;
  height: 100%;
}
.imgGroup .imgWrap:nth-of-type(3n){
  margin-right: 0;
}

.generate{
  height: 90rpx;
  font-size: 32rpx;
  color: #3889f0;
  background: white;
  margin: 38rpx 20rpx;
  box-sizing: border-box;
  border: 1rpx solid #3889f0;
  border-radius: 5px;
}
.generate view{
  height: 90rpx;
  width: 100%;
}